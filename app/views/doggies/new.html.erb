<div id="doggieCarousel" class="carousel carousel-dark slide" data-bs-interval="false">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "doggies/brown-docdoggie.png", class:"d-block w-100" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "doggies/gray-docdoggie.png", class:"d-block w-100" %>
    </div>
     <div class="carousel-item">
      <%= image_tag "doggies/cream-docdoggie.png", class:"d-block w-100" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "doggies/pink-docdoggie.png", class:"d-block w-100" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "doggies/yellow-docdoggie.png", class:"d-block w-100" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "doggies/red-docdoggie.png", class:"d-block w-100" %>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#doggieCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#doggieCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<h1>Choose a nice color for your new buddy's fur!</h1>
<div class="new-doggie-container">
<%= simple_form_for @doggie do |f| %>
  <%= f.input :petname, label: '"Woof, woof! What do you want to call me, hooman?"' %>
  <%= f.submit "Let's go!" %>
<% end %>
</div>
